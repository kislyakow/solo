<% if flash[:alert] %>
  <p id="login-alert" class="notice alert alert-danger col-sm-12"><%= flash[:alert] %></p>
<% end %>
<% if flash[:notice] %>
  <p class="flash-notice alert alert-info col-sm-12"><%= flash[:notice] %></p>
<% end %>

<h1>Listing posts <%= link_to '', new_post_path, class: "fa fa-plus-square-o", id: "posts_index" %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><h5><%= link_to post.title, edit_post_path(post) %></h5>  </td>
        <td><%= raw post.body.truncate(20) %></td>
        <td><%= post.published %></td>
        <td ><%= link_to '', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash-o" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


