<%= render 'shared/alert_messages' %>

<div id="loginbox" class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
	<div class="panel panel-info">
		<div class="panel-heading">
 			<div class="panel-title">Sign In</div>
    </div>
    <div class="panel-body">
    	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "loginform", class: "form-horizontal" } ) do |f| %>
    		<div class="input-group">
    			<span class="input-group-addon"><i class="fa fa-user"></i></span>
			  	<%= f.email_field :email, autofocus: true, id: "login-username", class:"form-control", placeholder: "#{:email}" %>
			  </div>
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-lock"></i></span>
			  	<%= f.password_field :password, autocomplete: "off", id: "login-password", class: "form-control", placeholder: "#{:password}"  %>
			  </div>
				<% if devise_mapping.rememberable? -%>
			    <div id: "login-remember" class="checkbox">
					  <%= f.check_box :remember_me %>
						<%= f.label :remember_me %>
				  </div>
			  <% end -%>
				<div class="form-group">
					<div class="col-sm-12 controls">
						<%= f.submit "Sign in", id: "btn-login", class: "btn btn-success" %>
					</div>
				</div>
			<% end %>
    </div>
	</div>
</div>